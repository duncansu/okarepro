<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/chatroombackground"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="1dp"
            android:src="@drawable/cloudbar" />

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/oldersetting" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="15"
        android:paddingHorizontal="30dp"
        >

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:orientation="vertical"
            android:background="@drawable/clouddatabackground">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="步數"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="10dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="血氧"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="10dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:orientation="vertical"
            android:background="@drawable/clouddatabackground">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="步數"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="10dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="血氧"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="10dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:orientation="vertical"
            android:background="@drawable/clouddatabackground">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="步數"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="10dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="血氧"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="10dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:orientation="vertical"
            android:background="@drawable/clouddatabackground">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="步數"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="10dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="血氧"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="10dp"
                />

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="25"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_marginVertical="2dp"
                >
                <ImageButton
                    android:id="@+id/aa"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/helpbutton"
                    android:layout_margin="2dp"
                    />
                <ImageButton
                    android:id="@+id/bb"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/healthybutton"
                    android:layout_margin="2dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_marginVertical="2dp"
                >
                <ImageButton
                    android:id="@+id/main_btn_9"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/medicinestorebutton"
                    android:layout_margin="2dp"
                    android:onClick="medicinemethod"
                    />
                <ImageButton
                    android:id="@+id/main_btn_10"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/cloudbutton"
                    android:layout_margin="2dp"
                    android:onClick="cloudmethod"
                    />
            </LinearLayout>
        </LinearLayout>
</LinearLayout>
